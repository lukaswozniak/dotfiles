# i3blocks config file

command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
label=VOL
interval=once
signal=10

[memory]
label=MEM
separator=false
interval=30

[disk]
label=HOME
instance=/
interval=30

[iface]
color=#00FF00
interval=10
separator=false

[bandwidth]
interval=1

[cpu_usage]
label=CPU
interval=1

[battery]
label=BAT
interval=30

[time]
command=date '+%Y-%m-%d %H:%M'
interval=5
